@model IEnumerable<SIS.Models.Course>

@{
    ViewBag.Title = "Course";
}

<br />

<p>
    @Html.ActionLink("Create a New Course", "Create")
</p>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.ActionLink(item.Name, "Edit", new { id = item.CourseCode })
            </td>

            <td>
                @Html.ActionLink("Delete", "Delete", new { id = item.CourseCode })
            </td>
        </tr>
    }

</table>
