
@using SIS.Extensions
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>WebApplication</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">


    @Styles.Render("~/Content/plugins/font-awesome/css")
    @Styles.Render("~/Content/plugins/ionicons/css")
    @Styles.Render("~/Content/bootstrap/css")
    @Styles.Render("~/Content/dist/css")
    @Styles.Render("~/Content/dist/css/skins")

    <script src="~/Scripts/pace.js"></script>
    <link href="~/Content/pace-theme.css" rel="stylesheet" />
</head>
<body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">
        <header class="main-header">
            <a href="@Url.Action("Index","Home")" class="logo">
                <span class="logo-mini"><b>SIS</b></span>
                <span class="logo-lg"><b>SIS</b>.Application</span>
            </a>
            <nav class="navbar navbar-static-top" role="navigation">
                <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                    <span class="sr-only">Toggle navigation</span>
                </a>

                <div>
                    @Html.Partial("_LoginPartial")
                </div>

            </nav>
        </header>
        <aside class="main-sidebar">
            <section class="sidebar">
                <ul class="sidebar-menu">
                    <li class="header">MAIN NAVIGATION</li>
                    <li class="treeview">
                        <a href="@Url.Action("Index","Trainers")">
                            <i class="fa fa-user"></i>
                            <span>Trainers</span>
                            <i class="fa fa-angle-left pull-right"></i>
                        </a>
                    </li>

                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-file"></i>
                            <span>Course</span>
                            <i class="fa fa-angle-left pull-right"></i>
                        </a>
                        <ul class="treeview-menu">
                            <li><a href="@Url.Action("Index","Courses")"><i class="fa fa-circle-o"></i>Courses</a></li>
                            <li><a href="@Url.Action("Index","Intake")"><i class="fa fa-circle-o"></i>Intake</a></li>
                            <li><a href="@Url.Action("Index","Modules")"><i class="fa fa-circle-o"></i>Module</a></li>
                            <li><a href="@Url.Action("Index","Course_Module")"><i class="fa fa-circle-o"></i>Assign Module To Course</a></li>
                        </ul>
                    </li>

                    <li class="treeview">
                        <a href="@Url.Action("Index", "Student")">
                            <i class="fa fa-users"></i>
                            <span>Student</span>
                            <i class="fa fa-angle-left pull-right"></i>
                        </a>
                    </li>

                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-tasks"></i>
                            <span>Class</span>
                            <i class="fa fa-angle-left pull-right"></i>
                        </a>
                        <ul class="treeview-menu">
                            <li><a href="@Url.Action("Index","ClassStudents")"><i class="fa fa-circle-o"></i>Class</a></li>
                            <li><a href="@Url.Action("ShowStandard","ModuleStandards")"><i class="fa fa-circle-o"></i>Set Module Standard</a></li>
                        </ul>
                    </li>

                    <li class="treeview">
                        <a href="@Url.Action("ClassAvailable", "Attendances")">
                            <i class="fa fa-user"></i>
                            <span>Attendance</span>
                            <i class="fa fa-angle-left pull-right"></i>
                        </a>
                    </li>

                    <li class="treeview">
                        <a href="@Url.Action("ShowClass", "CourseWorks")">
                            <i class="fa fa-table"></i>
                            <span>Marks CourseWork</span>
                            <i class="fa fa-angle-left pull-right"></i>
                        </a>
                    </li>

                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-sign-in"></i>
                            <span>Account</span>
                            <i class="fa fa-angle-left pull-right"></i>
                        </a>
                        <ul class="treeview-menu">
                            <li><a href="@Url.Action("RegisterRole", "Account")"><i class="fa fa-circle-o"></i>Role</a></li>
                            <li><a href="@Url.Action("Register", "Account")"><i class="fa fa-circle-o"></i>Register</a></li>
                        </ul>
                    </li>

                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-file-text"></i>
                            <span>Package</span>
                            <i class="fa fa-angle-left pull-right"></i>
                        </a>
                        <ul class="treeview-menu">
                            <li><a href="@Url.Action("Index","Invoice")"><i class="fa fa-circle-o"></i>Payment</a></li>
                            <li><a href="@Url.Action("Index","Package_Course")"><i class="fa fa-circle-o"></i>Package</a></li>
                        </ul>
                    </li>
                    @*<li class="treeview">
                            <a href="#">
                                <i class="fa fa-share"></i> <span>Multilevel</span>
                                <i class="fa fa-angle-left pull-right"></i>
                            </a>
                            <ul class="treeview-menu">
                                <li><a href="#"><i class="fa fa-circle-o"></i> Level One</a></li>
                                <li>
                                    <a href="#"><i class="fa fa-circle-o"></i> Level One <i class="fa fa-angle-left pull-right"></i></a>
                                    <ul class="treeview-menu">
                                        <li><a href="#"><i class="fa fa-circle-o"></i> Level Two</a></li>
                                        <li>
                                            <a href="#"><i class="fa fa-circle-o"></i> Level Two <i class="fa fa-angle-left pull-right"></i></a>
                                            <ul class="treeview-menu">
                                                <li><a href="#"><i class="fa fa-circle-o"></i> Level Three</a></li>
                                                <li><a href="#"><i class="fa fa-circle-o"></i> Level Three</a></li>
                                            </ul>
                                        </li>
                                    </ul>
                                </li>
                                <li><a href="#"><i class="fa fa-circle-o"></i> Level One</a></li>
                            </ul>
                        </li>*@
                </ul>
            </section>
        </aside>
        <div class="content-wrapper">
            <section class="content-header">
                <h1>
                    @ViewBag.Title
                    <small>@ViewBag.SubTitle</small>
                </h1>
            </section>
            <section class="content">
                @RenderBody()
            </section>
        </div>
        <footer class="main-footer">
            <div class="pull-right hidden-xs">
                <b>BETA</b> v3.2.8
            </div>
            <strong>Copyrights | MVC Application 2016 SeniorProject | Layout &copy; 2016 .</strong> All rights
            reserved.
        </footer>
        <div class="control-sidebar-bg"></div>
    </div>


    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/Content/plugins/jquery/js")
    @RenderSection("menu", required: false)
    @Scripts.Render("~/Content/bootstrap/js")
    @Scripts.Render("~/Content/plugins/slimscroll/js")
    @Scripts.Render("~/Content/plugins/fastclick/js")
    @Scripts.Render("~/Scripts/Shared/_Layout")
    @Scripts.Render("~/Content/dist/js")
    @RenderSection("scripts", required: false)
</body>
</html>