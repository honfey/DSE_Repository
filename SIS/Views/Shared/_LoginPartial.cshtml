@using SIS.Extensions

@if (Request.IsAuthenticated)
{
    @Html.AntiForgeryToken()
    <ul class="nav navbar-nav navbar-right" style="width:20%">
        <li class="">
            <a href="javascript:;" class="user-profile dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                <span>Welcome @User.Identity.Name</span>
            </a>
            <ul class="dropdown-menu " style="width: 100%">
                <li><a href="@Url.Action("Index","Manage")"> Setting</a></li>
                <li><a href="javascript:document.getElementById('logoutForm').submit()"><i class="fa fa-sign-out pull-right"></i> Log Out</a></li>
            </ul>
        </li>
        <li class="user-footer">
            @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "" }))
                {
                @Html.AntiForgeryToken()
            }
        </li>
    </ul>
}
else
{
    <ul class="nav navbar-nav">
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}