@model IEnumerable<SIS.Models.CourseWork>

@{
    ViewBag.Title = "EditList";
}

<h2>EditList</h2>

@using (Html.BeginForm("EditList", "CourseWorks", FormMethod.Post))
{

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ClassStudent.Student.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TestType.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WrittenTest)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OralTest)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Assignment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Presentation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Project)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th></th>
        </tr>

        @for (var i = 0; i < Model.Count(); i++)
        {
            <tr>
                @Html.Hidden("courseWork[" + (@i) + "].Id", Model.ElementAtOrDefault(i).Id)
                <td>
                    @Html.Hidden("courseWork[" + (@i) + "].ClassStudentId", Model.ElementAtOrDefault(i).ClassStudentId)                 
                    @Html.DisplayFor(p => Model.ElementAt(i).ClassStudent.Student.Name)
                </td>
                <td>
                    @Html.TextBox("courseWork[" + (@i) + "].TestTypeId", Model.ElementAtOrDefault(i).TestTypeId, new { @class = "form-control" })
                </td>
                <td>
                    @Html.TextBox("courseWork[" + (@i) + "].WrittenTest", Model.ElementAtOrDefault(i).WrittenTest, new { @class = "form-control" })
                </td>
                <td>
                    @Html.TextBox("courseWork[" + (@i) + "].OralTest", Model.ElementAtOrDefault(i).OralTest, new { @class = "form-control" })
                </td>
                <td>
                    @Html.TextBox("courseWork[" + (@i) + "].Assignment", Model.ElementAtOrDefault(i).Assignment, new { @class = "form-control" })
                </td>
                <td>
                    @Html.TextBox("courseWork[" + (@i) + "].Presentation", Model.ElementAtOrDefault(i).Presentation, new { @class = "form-control" })
                </td>
                <td>
                    @Html.TextBox("courseWork[" + (@i) + "].Project", Model.ElementAtOrDefault(i).Project, new { @class = "form-control" })
                </td>
                <td>
                    @Html.DisplayFor(p => Model.ElementAt(i).Total)
                </td>
                <td>
                    @Html.ActionLink("X", "Delete", new { id = Model.ElementAtOrDefault(i).Id }, new { @class = "btn btn-danger" })
                </td>

            </tr>

        }

    </table>
    <input type="submit" value="Submit" class="btn btn-primary" />
}
