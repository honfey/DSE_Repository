@model IEnumerable<SIS.Models.Course_Module>

@{
    ViewBag.Title = "Index";
}

<h2>Class Available</h2>

@*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@

<br>

@using (Html.BeginForm())
{
@Html.DropDownList("Search", new List<SelectListItem>

                    {
                        new SelectListItem{ Text="--Select", Value = "" },
                        new SelectListItem{ Text="True", Value = "1" },
                        new SelectListItem{ Text="False", Value = "0" },
                    }, htmlAttributes: new { @class = "form-control" })

    <input type="submit" class="btn btn-default" value="Search"/>
}

<br>





<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Course.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Module.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Trainer.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
            {
        <tr>
            @{
                if (item.Status == true)
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Course.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Module.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Trainer.Name)
                            </td>
                            <td>
                                @Html.ActionLink("Check Attendance", "CheckChoise", new { id = item.Id }) |
                                @Html.ActionLink("Mark Attendance", "MarkAttendance", new { id = item.Id })
                                @*@Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                            </td>
                }
            }
        </tr>

                }

</table>
